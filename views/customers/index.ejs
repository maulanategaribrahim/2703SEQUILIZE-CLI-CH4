<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>hellow fsw 1</h1>
    <% if (message != ""){ %>
        <div class="alert">
            DATA berhasil di <%= message %>
        </div>
        <% } %>
    <table>
        
        <th>id</th>
        <th>name</th>
        <th>age</th>
        <th>city</th>
        <th>email</th>
        <th>createdAt</th>
        <th>action</th>
        <% customers.map((customer) => { %>
            <tr>
                <td><%= customer.id %></td>
                <td><%= customer.name %></td>
                <td><%= customer.age %></td>
                <td><%= customer.city %></td>
                <td><%= customer.email %></td>
                <td><%= customer.createdAt %></td>
                <td>
                    <a href="/customers/edit/<% customer.id %>">
                        <button>EDIT</button>
                    </a>
                    <form action="/customers/delete/<% customer.id %>">
                        <button>DELETE</button>
                    </form>
                </td>
            </tr>
        <% }) %>    
    </table>
    <a href="/customers/create">
        <button>tambah customer</button>
    </a>
</body>
</html>